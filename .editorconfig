# editorconfig.org
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4

[*.{html,hbs}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{js,json,jsx,ts,tsx}]
indent_size = 2

[*.{yaml,yml}]
indent_style = space
indent_size = 2
